{
  "name": "Ffuenf/Ffuenf_DevTools",
  "license": "MIT",
  "description": "This is a extension for Magento Community Edition that adds access to commonly used development tasks in the backend.",
  "authors": [
    {
      "name": "Achim Rosenhagen",
      "email": "a.rosenhagen@ffuenf.de"
    }
  ],
  "type": "magento-module",
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://packages.firegento.com"
    }
  ],
  "extra": {
    "magento-root-dir": "./magento/",
    "map": [
      [
        "app/code/local/Ffuenf/DevTools",
        "app/code/local/Ffuenf/DevTools"
      ],
      [
        "app/etc/modules/Ffuenf_DevTools.xml",
        "app/etc/modules/Ffuenf_DevTools.xml"
      ],
      [
        "app/design/adminhtml/default/default/layout/devtools.xml",
        "app/design/adminhtml/default/default/layout/devtools.xml"
      ],
      [
        "app/design/adminhtml/default/default/template/devtools",
        "app/design/adminhtml/default/default/template/devtools"
      ],
      [
        "skin/adminhtml/default/default/headerbar.css",
        "skin/adminhtml/default/default/headerbar.css"
      ]
    ]
  }
}